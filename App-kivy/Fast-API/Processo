server {
    listen 80;
    server_name processarpdffalatex.zapto.org www.processarpdffalatex.zapto.org;
    return 301 https://$host$request_uri;  # Redirecionar para HTTPS
}

server {
    listen 443 ssl;
    server_name processarpdffalatex.zapto.org www.processarpdffalatex.zapto.org;

    ssl_certificate /etc/nginx/ssl/server_cert.pem;
    ssl_certificate_key /etc/nginx/ssl/server_key.pem;

    location / {
        proxy_pass http://localhost:7050;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
